@using JW_Management.Models
@inject IConfiguration Configuration

<!DOCTYPE html>
<html lang="pt-pt">

<head>
    <style>
        .dropzone {
            background: white;
            border-radius: 20px;
            border: 2px dashed rgb(0, 135, 247);
            border-image: none;
            max-width: 500px;
            margin-left: auto;
            margin-right: auto;
        }
    </style>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Gestor Congregacional @(User.Identity!.IsAuthenticated ? $"({User.ObterCong()})" : "")</title>

    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.css">
    <link rel="stylesheet" href="~/lib/bulma/css/bulma-no-dark-mode.css" />
    <link rel="stylesheet" href="~/lib/bulma-switch-control/css/main.min.css" />
    <link rel="stylesheet" href="~/lib/bulma-calendar/dist/css/bulma-calendar.min.css">
    <link rel="stylesheet" href="~/lib/bulma-responsive-tables/css/main.min.css" />
    <link rel="stylesheet" type="text/css" href="~/lib/bulma-list/css/bulma-list.css" />
    <link rel="stylesheet" href="~/lib/dropzone/dropzone.min.css" type="text/css" />
    <link rel="stylesheet" href="~/lib/bulma-pageloader/dist/css/bulma-pageloader.min.css" type="text/css" />
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css"
          integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY="
          crossorigin=""/>

    <link href="https://ajax.aspnetcdn.com/ajax/jquery.ui/1.9.2/themes/blitzer/jquery-ui.css" rel="Stylesheet"
          type="text/css" />
    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.10.0.min.js" type="text/javascript"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.ui/1.9.2/jquery-ui.min.js" type="text/javascript"></script>
    <script src="https://unpkg.com/html5-qrcode" type="text/javascript"></script>
    <script src="~/lib/vizuaalog/bulmajs/dist/bulma.min.js"></script>
    <script src="~/lib/bulma-calendar/dist/js/bulma-calendar.min.js"></script>
    <script src="~/lib/bulma-toast/dist/bulma-toast.min.js"></script>
    <script src="/lib/moment.js/moment-with-locales.min.js"></script>
    <script src="~/lib/dropzone/dropzone.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/gantt-schedule-timeline-calendar"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"
            integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo="
            crossorigin=""></script>
    
</head>
<body>
    <header>
        <nav class="navbar is-light has-shadow" role="navigation" aria-label="main navigation">
            <div class="navbar-brand">
                <a class="navbar-item" href="~/">
                    <img src="~/img/logo.png" style="width:60px;height:60px;max-height:60px">
                </a>

                <a role="button" class="navbar-burger" aria-label="menu" aria-expanded="false"
                   data-target="navbarBasicExample">
                    <span aria-hidden="true"></span>
                    <span aria-hidden="true"></span>
                    <span aria-hidden="true"></span>
                </a>
            </div>

            <div id="navbarBasicExample" class="navbar-menu">
            @if (User.Identity.IsAuthenticated)
            {
                <div class="navbar-start">
                    <div class="navbar-item has-dropdown is-hoverable">
                        <a class="navbar-link">
                            <span class="icon mr-2">
                                <img src="~/img/literatura.png">
                            </span>
                            <span>Literatura</span>
                        </a>

                        <div class="navbar-dropdown is-boxed">
                            <a class="navbar-item" href="~/Literatura">
                                <span class="icon">
                                    <i class="fa-solid fa-book"></i>
                                </span>
                                <span>Stock</span>
                            </a>
                            <a class="navbar-item" href="~/Literatura/Movimentos/1">
                                <span class="icon">
                                    <i class="fa-solid fa-right-to-bracket"></i>
                                </span>
                                <span>Entradas</span>
                            </a>
                            <a class="navbar-item" href="~/Literatura/Movimentos/2">
                                <span class="icon">
                                    <i class="fa-solid fa-right-from-bracket"></i>
                                </span>
                                <span>Saidas</span>
                            </a>
                            <a class="navbar-item" href="~/Literatura/Pedidos">
                                <span class="icon">
                                    <i class="fa-solid fa-book-medical"></i>
                                </span>
                                <span>Pedidos</span>
                            </a>
                        </div>
                    </div>
                    <div class="navbar-item has-dropdown is-hoverable">
                        <a class="navbar-link">
                            <span class="icon mr-2">
                                <img src="~/img/territorios.png">
                            </span>
                            <span>Territórios</span>
                        </a>

                        <div class="navbar-dropdown is-boxed">
                            <a class="navbar-item" href="~/Territorios">
                                <span class="icon">
                                    <i class="fa-solid fa-book"></i>
                                </span>
                                <span>Listagem</span>
                            </a>
                            <a class="navbar-item" href="~/Territorios/Registros">
                                <span class="icon">
                                    <i class="fa-solid fa-right-to-bracket"></i>
                                </span>
                                <span>Registros</span>
                            </a>

                        </div>
                    </div>
                    <div class="navbar-item has-dropdown is-hoverable">
                        <a class="navbar-link">
                            <span class="icon mr-2">
                                <img src="~/img/reunioes.png">
                            </span>
                            <span>Reuniões</span>
                        </a>

                        <div class="navbar-dropdown is-boxed">
                            <a class="navbar-item" href="~/Reunioes">
                                <span class="icon">
                                    <i class="fa-solid fa-book"></i>
                                </span>
                                <span>Listagem</span>
                            </a>
                            <a class="navbar-item" href="~/Reunioes/Discursos">
                                <span class="icon">
                                    <i class="fa-solid fa-person"></i>
                                </span>
                                <span>Discursos</span>
                            </a>
                            <a class="navbar-item" href="~/Reunioes/Calendario">
                                <span class="icon">
                                    <i class="fa-solid fa-calendar"></i>
                                </span>
                                <span>Calendário</span>
                            </a>
                        </div>
                    </div>
                </div>
            }
            <div class="navbar-end">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <div class="navbar-item has-dropdown">
                            <a class="navbar-link">
                                <figure class="mr-2 mt-1">
                                    <img class="is-rounded" style="width:50px;max-height:50px;" src="~/img/user.png" alt="user_image">
                                </figure>
                                <span><b>[@User.ObterCong()]</b> @User.ObterNomeCompleto()</span>
                            </a>

                            <div class="navbar-dropdown">
                                <div class="navbar-item">
                                    <a class="button is-primary is-fullwidth" href="~/Publicadores">
                                        <span class="icon mr-2">
                                            <img src="~/img/publicadores.png">
                                        </span>
                                        <span>Publicadores</span>
                                    </a>
                                </div>
                                <div class="navbar-item">
                                    <a class="button is-danger is-light is-fullwidth" href="~/Home/Logout">
                                        <span class="icon">
                                            <i class="fas fa-sign-out-alt"></i>
                                        </span>
                                        <span>Terminar Sessão</span>
                                    </a>
                                </div>
                                <hr class="navbar-divider">
                                <div class="navbar-item">
                                    APP V.@GetType().Assembly.GetName().Version.ToString()@(Environment.GetEnvironmentVariable("ASPNETCORE_ENVIRONMENT") == "Development" ? " - DEV" : "")<br/>
                                    DB V.@double.Parse(Configuration["DbVersion"] ?? "N/D")
                                </div>
                                <div class="navbar-item">
                                    <a href="https://bulma.io">
                                        <img style="width:100%"
                                             src="https://bulma.io/assets/images/made-with-bulma.png"
                                             alt="Made with Bulma">
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="navbar-item">
                            <a class="button is-info is-light" href="~/Home/Login">
                                <span class="icon">
                                    <i class="fas fa-sign-in-alt"></i>
                                </span>
                                <span>Iniciar Sessão</span>
                            </a>
                        </div>
                    }
                </div>
            </div>
        </nav>
    </header>
    <div class="">
        <main role="main">
            &nbsp;
            @RenderBody()
            &nbsp;
        </main>
    </div>
    <footer class="has-text-centered is-flex-align-items-flex-end mt-auto">
        <div class="content has-text-centered">
            <p>
                <strong>Jorge Monteiro</strong> (V.@GetType().Assembly.GetName().Version!.ToString())
            </p>
        </div>
        &nbsp;
    </footer>
    @RenderSection("Scripts", required: false)
</body>

</html>

<script>
    function notifyError(mensagem) {
        const Toast = Swal.mixin({
            toast: true,
            position: "top-end",
            showConfirmButton: false,
            timer: 5000,
            timerProgressBar: true
        });
        Toast.fire({
            icon: "error",
            title: mensagem
        });
    }

    function notify(mensagem) {
        const Toast = Swal.mixin({
            toast: true,
            position: "top-end",
            showConfirmButton: false,
            timer: 5000,
            timerProgressBar: true
        });
        Toast.fire({
            icon: "success",
            title: mensagem
        });
    }
</script>
