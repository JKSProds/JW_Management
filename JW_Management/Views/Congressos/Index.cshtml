@model IEnumerable<JW_Management.Models.Congresso>
@{
    ViewData["Title"] = "Congressos / Assembleias";
}

<form asp-action="Index" method="get" id="frmFiltrar">
    <div class="container">
        <div class="columns">
            <div class="column">
                <div class="tile">
                    <div class="tile is-parent is-vertical">
                        <article class="tile is-child notification is-info">
                            <p class="title">
                                <span class="icon mr-3">
                                    <i class="fa-solid fa-users-between-lines"></i>
                                </span>
                                <span>Congressos / Assembleias</span>
                            </p>
                        </article>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
<hr />
<div class="container">
    @if (Model.Count() == 0)
    {
        <br />
        <button class="button is-danger is-large is-rounded is-fullwidth is-disabled">Não foram encontrados congressos / assembleias!</button>
    }
    else
    {
        <div class="b-table">
            <div class="table-wrapper has-mobile-cards">
                <table class="table is-hoverable is-fullwidth">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.FirstOrDefault()!.Id)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.FirstOrDefault()!.Nome)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.FirstOrDefault()!.DataInicio)
                            </th>
                            <th class=""></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td data-label="@Html.DisplayNameFor(model => model.FirstOrDefault()!.Id)">
                                    <span>@item.Id</span>
                                </td>
                                <td data-label="@Html.DisplayNameFor(model => model.FirstOrDefault()!.Nome)">
                                    <span>@item.Nome</span>
                                </td>
                                <td data-label="@Html.DisplayNameFor(model => model.FirstOrDefault()!.DataInicio)">
                                    <span>@item.DataInicio.ToShortDateString() -> @item.DataFim.ToShortDateString()</span>
                                </td>
                                <td class="is-actions-cell">
                                    <div class="field has-addons is-pulled-right is-flex-wrap-nowrap" style="width:100%">
                                        <a class="button is-info is-fullwidth is-large mr-1"
                                           href="~/Congressos/Congresso/@item.Id">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>
