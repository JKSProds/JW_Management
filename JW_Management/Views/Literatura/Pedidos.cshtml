@model IEnumerable<JW_Management.Models.Literatura>
@{
    ViewData["Title"] = "Literatura - Pedidos";
}

<div class="container">
    <div class="columns">
        <div class="column">
            <div class="tile">
                <div class="tile is-parent is-vertical">
                    <article class="tile is-child notification is-info">
                        <p class="title">
                            <span class="icon mr-3">
                                <i class="fa-solid fa-book-medical"></i>
                            </span>
                            <span>Pedidos</span>
                        </p>
                    </article>
                </div>
            </div>
        </div>
        <div class="column">
            <div class="field has-addons has-addons-right mx-1 is-flex-wrap-wrap" style="width:100%">

                <div class="buttons is-right">
                    <p class="control">
                        <button type="button" class="button is-info is-large is-fullwidth "
                                onclick="Bulma('#modalPedidoPublicacoes').modal().open();">
                            <span class="icon">
                                <i class="fa-solid fa-book"></i>
                            </span>
                            <span>Publicações</span>
                        </button>
                    </p>
                    <p class="control">
                        <button type="button" class="button is-primary is-large is-fullwidth "
                                onclick="Bulma('#modalPedidoPeriodicos').modal().open();">
                            <span class="icon">
                                <i class="fa-solid fa-newspaper"></i>
                            </span>
                            <span>Periódicos</span>
                        </button>
                    </p>
                    <p class="control">
                        <button type="button" class="button is-success is-large is-fullwidth "
                                onclick="Bulma('#modalMailPedidos').modal().open();">
                            <span class="icon">
                                <i class="fa-solid fa-paper-plane"></i>
                            </span>
                            <span>Mail Pedidos Especiais</span>
                        </button>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<hr />
<div class="container">
    <div class="tabs-wrapper">
