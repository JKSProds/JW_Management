<script>
    function ConfirmApagarPeriodico(id) {
        document.getElementById('txtHiddenStamp').value = id;
        Bulma('#ModalConfirmApagarPeriodico').modal().open();
    }

    function ApagarPeriodico(id) {
        $.ajax({
            url: '/Literatura/Periodico/',
            data: { "id": id },
            type: "DELETE",
            success: function (data) {
                window.location.reload();
            },
            error: function (data) {
                notifyError('Ocorreu um erro ao apagar essa publicação!');
            },
            failure: function (data) {
                notifyError('Falha ao apagar essa publicação!');
            }
        });
    }

    function ConfirmApagarEspecial(id) {
        document.getElementById('txtHiddenStamp').value = id;
        Bulma('#ModalConfirmApagarEspecial').modal().open();
    }

    function ApagarPeriodico(id) {
        $.ajax({
            url: '/Literatura/Periodico/',
            data: { "id": id },
            type: "DELETE",
            success: function (data) {
                window.location.reload();
            },
            error: function (data) {
                notifyError('Ocorreu um erro ao apagar essa publicação!');
            },
            failure: function (data) {
                notifyError('Falha ao apagar essa publicação!');
            }
        });
    }

    function ApagarEspecial(id) {
        $.ajax({
            url: '/Literatura/Pedido/',
            data: { "id": id },
            type: "DELETE",
            success: function (data) {
                window.location.reload();
            },
            error: function (data) {
                notifyError('Ocorreu um erro ao apagar essa publicação!');
            },
            failure: function (data) {
                notifyError('Falha ao apagar essa publicação!');
            }
        });
    }

    $(function () {
        $("#txtPub").autocomplete({
            source: function (request, response) {
                $.ajax({
                    url: '/Literatura/Literaturas/',
                    data: { "filtro": request.term, "periodico": false },
                    type: "GET",
                    success: function (data) {
                        response($.map(data, function (item) {
